<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), class:"form-signin",html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions",class:"btn btn-outline-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
